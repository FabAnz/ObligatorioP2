@using LogicaNegocio;
@model Venta;

@if (Model.Estado == EstadoPublicacion.Abierta)
{
    <h1>@Model.Nombre</h1>
    <p>Publicado el @Model.FechaPublicacion</p>
    @if (Model.EnOferta)
    {
        <p>En oferta</p>
    }
    <p>$ @Model.CalcularPrecio()</p>
    <form method="post">
        <input type="hidden" value="@Model.Id" name="id" id="id"></input>
        <input type="hidden" value="Compra realizada con exito." name="mensaje" id="mensaje"></input>
        <button type="submit" class="btn btn-primary">Comprar</button>
    </form>

    <h2>Articulos</h2>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Nombre</th>
                <th scope="col">Categoria</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Articulo unArticulo in ViewBag.Articulos)
            {
                <tr>
                    <th scope="row">@unArticulo.Nombre</th>
                    <td>@unArticulo.Categoria</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-danger">
        <p>Esta venta no está disponible.</p>
    </div>
}
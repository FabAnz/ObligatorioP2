@using LogicaNegocio
@model Cliente

<div class="container-fluid registrate">
    <div class="full-height row justify-content-center align-items-center">
        <div class="ingreso">
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger alert-popup show full-width">
                    <p>@ViewBag.Error</p>
                </div>
            }
            <div class="row contenedor-login flex-column-reverse flex-md-row">
                <div class="col-12 col-md-6 login">

                    <h1 class="mb-5">REGISTRATE</h1>

                    <form method="post">
                        <div class="form-group">
                            <input type="text" name="Nombre" id="Nombre" placeholder="Nombre" class="mb-3">
                        </div>
                        <div class="form-group">
                            <input type="text" name="Apellido" id="Apellido" placeholder="Apellido" class="mb-3">
                        </div>
                        <div class="form-group">
                            <input type="email" name="Email" id="Email" placeholder="example@email.com" class="mb-3">
                        </div>
                        <div class="form-group">
                            <input type="password" name="Pass" id="Pass" placeholder="Password" class="mb-5">
                        </div>

                        <button type="submit" class="btn-violeta rounded-pill full-width mb-3">REGISTRARME</button>
                        <a href="~/Usuarios/Login" class="d-block text-center btn-violeta-3 text-decoration-none full-width">VOLVER</a>

                    </form>
                </div>

                <div class="col-12 col-md-6 flex-column justify-content-between">

                    <div class="row flex-column justify-content-between login-info">
                        <div class="text-end">
                            <span class="d-block">obligatorio</span>
                            <span class="d-block mb-5 mb-md-0">PROGRAMACIÓN 2</span>
                        </div>
                        <div>
                            <p class="mb-0 mb-md-3">Fabián Antúnez - 339182<br>Grupo: N2D</p>
                            <p class="mb-0 d-none d-md-block">Docente: Lucas Lopez<br>Analista Programador</p>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
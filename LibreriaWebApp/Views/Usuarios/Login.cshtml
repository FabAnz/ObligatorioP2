<h1>Login</h1>

@if (ViewBag.Mensaje != null)
{
    <div class="alert alert-success">
        <p>@ViewBag.Mensaje</p>
    </div>
}

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">
        <p>@ViewBag.Error</p>
    </div>
}

<form method="post">
    <div class="form-group">
        <input type="email" name="Email" class="form-control" id="Email" aria- placeholder="name@example.com">
    </div>
    <div class="form-group">
        <input type="password" name="Pass" class="form-control" id="Pass" aria- placeholder="Password">
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
</form>
    
<p>¿Aún no tenes cuenta? <a href="~/Usuarios/RegistrarCliente">registrarme</a></p>
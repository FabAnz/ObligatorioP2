<div class="container-fluid">
    <div class="full-height row justify-content-center align-items-center">
        <div class="ingreso">
            @if (ViewBag.Exito != null)
            {
                <div class="alert alert-danger alert-popup show full-width">
                    <p>@ViewBag.Exito</p>
                </div>
            }

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger alert-popup show full-width">
                    <p>@ViewBag.Error</p>
                </div>
            }
            <div class="row">
                <div class="col-12 col-lg-6 px-56 py-144">

                    <h1 class="h2 mb-5">Login</h1>

                    <form method="post" action="~/Usuarios/LoginIngresar">
                        <div class="form-group mb-3">
                            <input type="email" name="Email" class="form-control" id="Email" aria- placeholder="name@example.com">
                        </div>
                        <div class="form-group">
                            <input type="password" name="Pass" class="form-control" id="Pass" aria- placeholder="Password">
                        </div>
                        <button type="submit" class="btn btn-primary full-width mt-5 mb-3">Login</button>
                    </form>

                    <p class="mb-0">¿Aún no tenes cuenta? Registrate <strong><a href="~/Usuarios/RegistrarCliente">aquí</a></strong></p>
                </div>
            </div>
        </div>
    </div>
</div>